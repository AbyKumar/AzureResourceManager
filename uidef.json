{
  "handler": "Microsoft.Compute.VmExtension",
  "version": "1.0.0",
  "parameters": {
    "elements": [
      {
        "name": "myParamStringBasic",
        "type": "Microsoft.Common.DropDown",
        "label": "myParamStringBasic",
        "defaultValue": "Standard_LRS",
        "toolTip": "this is the metadata description",
        "constraints": {
          "allowedValues": [
            {
              "label": "Standard_LRS",
              "value": "Standard_LRS"
            },
            {
              "label": "Standard_HRS",
              "value": "Standard_GRS"
            }
          ]
        }
      },
      {
        "name": "myParamSpace",
        "type": "Microsoft.Common.TextBox",
        "label": "myParamSpace",
        "defaultValue": "myInfra",
        "toolTip": "My infra description"
      },
      {
        "name": "myParamStringApp",
        "type": "Microsoft.Common.TextBox",
        "label": "myParamStringApp",
        "defaultValue": "myApp",
        "toolTip": "My app description"
      },
      {
        "name": "myParamStringDB",
        "type": "Microsoft.Common.PasswordBox",
        "label": {
          "password": "Password",
          "confirmPassword": "Confirm password"
        },
        "toolTip": "DB for the app"
      }
    ],
    "outputs": {
      "vmName": "[vmName()]",
      "location": "[location()]",
      "myParamStringBasic": "[elements('myParamStringBasic')]",
      "myParamSpace": "[elements('myParamSpace')]",
      "myParamStringApp": "[elements('myParamStringApp')]",
      "myParamStringDB": "[elements('myParamStringDB')]"
    }
  }
}
