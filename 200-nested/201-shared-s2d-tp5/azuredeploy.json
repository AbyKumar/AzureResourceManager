{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {

  },
  "variables": {
    "template": {
      "base": "https://raw.githubusercontent.com/marcvaneijk/arm/master/200-nested/201-shared/",
      "shared": "shared.json",
      "vm": {
        "dc": "vm-dc.json",
        "s2d": "vm-s2d.json"
      },
      "config": {
        "dc": "config-dc.json",
        "s2d": "config-s2d.json"
      }
    },
    "common": {
      "storageAccount": {
        "name": "[concat(uniquestring(resourceGroup().id),'storage')]",
        "type": "Standard_LRS"
      },
      "virtualNetwork": {
        "name": "s2dvNet",
        "addressSpace": "10.0.0.0/16",
        "subnet1": "10.0.1.0/24",
        "subnet2": "10.0.2.0/24"
      }
    }
  },
  "resources": [
    {
      "name": "[variables('template').shared]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(concat(variables('template').base, 'nested/'), variables('template').shared)]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "common": {
            "value": "[variables('common')]"
          }
        }
      }
    },
    {
      "name": "[variables('template').vm.dc]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', variables('template').shared)]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(concat(variables('template').base, 'nested/'), variables('template').vm.dc)]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "apiVersion": {
            "value": "[variables('common')]"
          }
        }
      }
    },
    {
      "name": "[variables('template').vm.s2d]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', variables('template').shared)]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(concat(variables('template').base, 'nested/'), variables('template').vm.s2d)]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "apiVersion": {
            "value": "[variables('common')]"
          }
        }
      }
    },
    {
      "name": "[variables('template').config.dc]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', variables('template').vm.dc)]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(concat(variables('template').base, 'nested/'), variables('template').config.dc)]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "apiVersion": {
            "value": "[variables('common')]"
          }
        }
      }
    },
    {
      "name": "[variables('template').config.s2d]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', variables('template').config.dc)]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(concat(variables('template').base, 'nested/'), variables('template').config.s2d)]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "apiVersion": {
            "value": "[variables('common')]"
          }
        }
      }
    }
  ],
  "outputs": {
    "repositoryUri": {
      "value": "[variables('template').base]",
      "type": "string"
    }
  }
}
