{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "optionalResource": {
      "type": "string",
      "defaultValue": "configured",
      "allowedValues": [
        "configured",
        "notconfigured"
      ],
      "metadata": {
        "description": "Based on this value a different nested template is deployed"
      }
    }
  },
  "variables": {
    "apiVersion": {
      "deployment": "2015-01-01"
    },
    "uri": {
      "templateBase": "https://raw.githubusercontent.com/marcvaneijk/armdemo/master/nestedtemplatelayout/",
      "optionalTemplateRelative": "[concat('nested/optional_', parameters('optionalResource'),'.json')]"
    }
  },
  "resources": [
    {
      "name": "sharedresources",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "[variables('apiVersion').deployment]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('uri').templateBase, 'nested/sharedresources.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "apiVersion": {
            "value": "[variables('apiVersion')]"
          }
        }
      }
    },
    {
      "name": "optional",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "[variables('apiVersion').deployment]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('uri').templateBase, variables('uri').optionalTemplateRelative)]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "apiVersion": {
            "value": "[parameters('optionalResource')]"
          }
        }
      }
    },
    {
      "name": "memberresources1",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "[variables('apiVersion').deployment]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('uri').templateBase, 'nested/memberresources1.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "apiVersion": {
            "value": "[parameters('optionalResource')]"
          }
        }
      }
    },
        {
      "name": "memberresources2",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "[variables('apiVersion').deployment]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('uri').templateBase, 'nested/memberresources1.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "apiVersion": {
            "value": "[parameters('optionalResource')]"
            }
          }
        }
      }
  ],
    "outputs": {
    }
}
